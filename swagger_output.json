			"parameters": [
				{
					"name": "x-access-token",
					"in": "header",
					"type": "string"
				}
			],
			"responses": {
				"200": {
					"description": "List of articles from subscribed users"
				},
				"401": {
					"description": "Unauthorized"
				}
			}
		}
	},
	"/api/articles/{slug}": {
		"get": {
			"description": "Get one article if you have articles to read",
			"tags":["Article"],
			"parameters": [
				{
					"name": "slug",
					"in": "path",
					"required": true,
					"type": "string"
				},
				{
					"name": "x-access-token",
					"in": "header",
					"type": "string"
				}
			],
			"responses": {
				"200": {
					"description": "One article if you have articles to read"
				},
				"401": {
					"description": "Unauthorized"
				},
				"403": {
					"description": "You have no articles left"
				},
				"404": {
					"description": "Not Found"
				}
			}
		},
		"put": {
			"description": "Update article if you author of this article",
			"tags":["Article"],
			"parameters": [
				{
					"name": "slug",
					"in": "path",
					"required": true,
					"type": "string"
				},
				{
					"name": "x-access-token",
					"in": "header",
					"type": "string"
				},
				{
					"name": "body",
					"in": "body",
					"schema": {
						"type": "object",
						"properties": {
							"article": {
								"title": "Updated article title",
								"description": "Updated article description",
								"body": "Updated article body"
							}
						}
					}
				}
			],
			"responses": {
				"200": {
					"description": "Article successfully updated"
				},
				"401": {
					"description": "Unauthorized"
				},
				"403": {
					"description": "Forbidden"
				},
				"404": {
					"description": "Article not Found"
				}
			}
		},
		"delete": {
			"description": "Delete article if you author of this article",
			"tags":["Article"],
			"parameters": [
				{
					"name": "slug",
					"in": "path",
					"required": true,
					"type": "string"
				},
				{
					"name": "x-access-token",
					"in": "header",
					"type": "string"
				}
			],
			"responses": {
				"200": {
					"description": "Article successfuly deleted"
				},
				"401": {
					"description": "Unauthorized"
				},
				"403": {
					"description": "Forbidden"
				},
				"404": {
					"description": "Not Found"
				}
			}
		}
